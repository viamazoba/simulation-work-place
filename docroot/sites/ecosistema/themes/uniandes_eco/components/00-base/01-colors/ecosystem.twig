{% set colors_base_class = "cl-colors" %}

<div {{ bem(colors_base_class) }}>
  {% include "@atoms/text/headings/_heading.twig" with {
    heading_level: 2,
    heading: colors_heading,
  } %}

  {% set palette_machine = palette_heading|lower|replace({' ': '-'}) %}
  {% include "@atoms/text/headings/_heading.twig" with {
    heading_level: 3,
    heading: palette_heading,
  } %}

  <div {{ bem('list', [palette_machine], colors_base_class) }} data-theme="{{ palette_machine }}">
    {% for color in colors %}
      {% set color_machine = color.name|lower|replace({' ': '-'}) %}
      {% set color_hex = color.hex[0] != '#' ? '#' ~ color.hex : color.hex %}

      <div {{ bem('content', [palette_machine], colors_base_class) }}>
        <div {{ bem("item", [palette_machine ~ '-' ~ color_machine], colors_base_class) }} style="background-color: {{ color_hex }};"></div>
        <div {{ bem('content__details', [], colors_base_class) }}>
          <span {{ bem('content__details', ['subtitle'], colors_base_class) }}>{{ color.subtitle }}</span><br>
          <span>{{ color.name }}</span><br>
          <span>HEX {{ color_hex }}</span><br>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
