{% set colors_base_class = "cl-colors" %}

<div {{ bem(colors_base_class) }}>
  {% include "@atoms/text/headings/_heading.twig" with {
    heading_level: 2,
    heading: colors_heading,
  } %}

  {% for palette in dark %}
    {% set palette_machine = palette.palette_heading|lower %}
    {% include "@atoms/text/headings/_heading.twig" with {
      heading_level: 3,
      heading: palette.title_section,
    } %}
    <div {{ bem('list', [palette_machine], colors_base_class) }} data-theme="{{ palette_machine }}">
      {% for color in palette.colors %}
        {% set color_machine = color.name|lower|replace({' ': '-'}) %}
        {% if color.color_reverse == TRUE %}
          {% set colors_title_modifiers = ['reverse'] %}
        {% endif %}
        <div {{ bem('content-dark', [], colors_base_class) }}>
          <div {{ bem('item', [palette_machine ~ '-' ~ color_machine], colors_base_class) }}></div>
            <div {{ bem('content__details', [], colors_base_class) }}>
              {% if color.subtitle %}
                <span {{ bem('content__details', ['subtitle'], colors_base_class) }}>{{ color.subtitle }}</span><br>
              {% endif %}
              <span {{ bem('content__details', ['name'], colors_base_class) }}>{{ color.name }}</span><br>
              <span {{ bem('content__details', ['hex'], colors_base_class) }}>HEX {{ color.hex }}</span><br>
              {% if color.variable %}
                <span {{ bem('content__details', ['variable'], colors_base_class) }}>Variable relacionada:</span><br>
                <span>{{ color.variable }}</span><br>
              {% endif %}
            </div>
        </div>
      {% endfor %}
    </div>
  {% endfor %}
</div>