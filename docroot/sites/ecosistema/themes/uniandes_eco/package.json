{
  "name": "emulsify-drupal",
  "version": "1.0.0",
  "description": "Storybook development + Webpack Build",
  "keywords": [
    "component library",
    "design system",
    "drupal",
    "pattern library",
    "storybook",
    "styleguide"
  ],
  "author": {
    "name": "Four Kitchens",
    "email": "shout@fourkitchens.com"
  },
  "license": "ISC",
  "scripts": {
    "a11y": "npm run storybook build && ./assets/scripts/a11y.js -r",
    "build": "webpack --config ./webpack/webpack.prod.js",
    "commit": "git-cz",
    "css-deploy": "cp ./dist/css/style.css ../uniandes_edu/css/style-ds.css",
    "sync-styleguide": "cp -r ./components/01-atoms/* ../uniandes_edu/components/01-atoms/ && cp -r ./components/02-molecules/* ../uniandes_edu/components/02-molecules/ && cp -r ./components/03-organisms/* ../uniandes_edu/components/03-organisms/ && cp -r ./components/04-templates/* ../uniandes_edu/components/04-templates/ && cp -r ./components/05-pages/* ../uniandes_edu/components/05-pages/",
    "coverage": "npm run test && open-cli .coverage/lcov-report/index.html",
    "develop": "concurrently --raw \"npm run webpack\" \"npm run storybook\"",
    "format": "npm run lint-fix; npm run prettier-fix",
    "husky:commit-msg": "commitlint --edit $1",
    "husky:pre-commit": "npm run lint-staged ; npm run lint",
    "lint": "npm run lint-js; npm run lint-styles",
    "lint-fix": "npm run lint-js -- --fix; npm run lint-styles -- --fix",
    "lint-js": "eslint --no-error-on-unmatched-pattern ./components",
    "lint-staged": "lint-staged",
    "lint-styles": "stylelint './components/**/*.scss'",
    "postinstall": "npx patch-package",
    "prepare": "[ -d '.git' ] && (husky install) || true",
    "prettier": "prettier --ignore-unknown \"./components/**/*.{js,yml,scss,md}\"",
    "prettier-fix": "prettier --write --ignore-unknown \"./components**/*.{js,yml,scss,md}\"",
    "semantic-release": "semantic-release",
    "storybook": "storybook dev --ci -s ./dist,./assets/images,./assets/icons -p 6006",
    "storybook-build": "storybook build -s ./dist,./assets/images,./assets/icons -o .out",
    "build-storybook": "storybook build -s ./dist,./assets/images,./assets/icons -o .out",
    "storybook-deploy": "storybook-to-ghpages -o .out",
    "test": "jest --coverage",
    "twatch": "jest --no-coverage --watch --verbose",
    "webpack": "webpack --watch --config ./webpack/webpack.dev.js",
    "chromatic": "npx chromatic --project-token chpt_acb2ffd4a70d662"
  },
  "dependencies": {
    "@storybook/addon-designs": "^7.0.9",
    "add-attributes-twig-extension": "^0.1.0",
    "bem-twig-extension": "^0.1.1",
    "graceful-fs": "^4.2.10",
    "js-yaml": "^4.1.0",
    "normalize.css": "^8.0.1",
    "postcss-scss": "^4.0.7",
    "regenerator-runtime": "^0.13.11",
    "sass": "^1.66.1",
    "sass-loader": "^13.3.2",
    "storybook": "^7.5.1",
    "stylelint-selector-bem-pattern": "^3.0.1",
    "twig-drupal-filters": "^3.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.11",
    "@babel/eslint-parser": "^7.22.11",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@semantic-release/github": "^9.0.4",
    "@storybook/addon-a11y": "^7.5.1",
    "@storybook/addon-actions": "^7.5.1",
    "@storybook/addon-essentials": "^7.5.1",
    "@storybook/addon-links": "^7.5.1",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/html": "^7.5.1",
    "@storybook/html-webpack5": "^7.5.1",
    "@storybook/storybook-deployer": "^2.8.16",
    "autoprefixer": "^10.4.15",
    "babel-loader": "^9.1.2",
    "babel-preset-minify": "^0.5.2",
    "breakpoint-sass": "^3.0.0",
    "chalk": "^5.2.0",
    "chromatic": "^11.5.4",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^8.2.0",
    "css-loader": "^6.7.3",
    "eslint": "^8.48.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.2.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-security": "^1.5.0",
    "eslint-plugin-storybook": "^0.6.11",
    "eslint-webpack-plugin": "^4.0.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.3",
    "imagemin-webpack-plugin": "^2.1.5",
    "js-yaml-loader": "^1.2.2",
    "lint-staged": "^14.0.1",
    "mini-css-extract-plugin": "^2.7.5",
    "node-sass-glob-importer": "^5.3.3",
    "open-cli": "^7.1.0",
    "pa11y": "^6.2.3",
    "postcss": "^8.4.29",
    "postcss-loader": "^7.3.3",
    "ramda": "^0.29.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "style-dictionary": "^3.7.2",
    "stylelint": "^15.10.3",
    "stylelint-config-standard-scss": "^10.0.0",
    "stylelint-prettier": "^4.0.2",
    "stylelint-webpack-plugin": "^4.0.0",
    "svg-sprite-loader": "^6.0.11",
    "token-transformer": "^0.0.33",
    "twig-loader": "git+https://github.com/fourkitchens/twig-loader.git",
    "twig-testing-library": "^1.2.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^5.9.0",
    "yaml": "^2.3.2"
  },
  "overrides": {
    "graceful-fs": "^4.2.10"
  }
}
